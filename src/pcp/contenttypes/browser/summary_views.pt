<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>

<metal:main fill-slot="main">

    <tal:main-macro metal:define-macro="main"
           tal:define="portal context/portal_url/getPortalObject;
                       templateId template/getId;
                       abstracts view/getAbstractsForCurrentMember|nothing;">

        <div tal:replace="structure provider:plone.abovecontenttitle" />

        <h1 class="documentFirstHeading"
            tal:content="view/title">
        </h1>

        <!--div tal:replace="structure provider:plone.belowcontenttitle" /-->

        <p class="documentDescription"
            tal:content="view/description">
        </p>

        <div tal:replace="structure provider:plone.abovecontentbody" />


  <table class="pat-datatables listing dt-table" id="overview-table"
          tal:define="simple_fields python:view.simple_fields();
                      fields python:view.fields();">
      <thead>
        <tr>
              <th tal:repeat="label view/field_labels" tal:content="label">Header</th>
        </tr>
      </thead>
      <tbody>
      <tr tal:repeat="content view/content_items">
          <td tal:repeat="field python:fields">
              <div tal:condition="python:field in simple_fields"
                   tal:content="python:getattr(content, field, '')">
                  Field value
              </div>
              <div tal:condition="python:field not in simple_fields"
                   tal:define="field python:field.__name__ if not isinstance(field, str) else field"
                   tal:content="structure python:view.render(content, field)">
                field value
              </div>
          </td>
        </tr>
      </tbody>
      <tfoot>
        <tr>
              <th tal:repeat="label view/field_labels" tal:content="label">Footer</th>
        </tr>
      </tfoot>
  </table>

        <div tal:replace="structure provider:plone.belowcontentbody" />
    </tal:main-macro>
</metal:main>

</body>
</html>
