<?xml version="1.0"?>
<object name="servicecomponent_dx" meta_type="Dexterity FTI" i18n:domain="plone"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
 <property name="title" i18n:translate="">Service Component</property>
 <property name="description" i18n:translate="">Component of an EUDAT service</property>
 <property name="icon_expr">string:${portal_url}/document_icon.png</property>
 <property name="factory">servicecomponent</property>
 <property name="add_view_expr">string:${folder_url}/++add++servicecomponent_dx</property>
 <property name="link_target"></property>
 <property name="immediate_view">view</property>
 <property name="global_allow">False</property>
 <property name="filter_content_types">True</property>
 <property name="allowed_content_types">
    <element value="Folder"/>
    <element value="servicecomponentimplementation_dx"/>
 </property>
 <property name="allow_discussion">False</property>
 <property name="default_view">compact-view</property>
 <property name="view_methods">
  <element value="compact-view"/>
  <element value="view"/>
 </property>
 <property name="default_view_fallback">False</property>
 <property name="add_permission">pcp.contenttypes.addServiceComponent</property>
 <property name="klass">pcp.contenttypes.content_dx.servicecomponent.ServiceComponent</property>
 <property name="schema">pcp.contenttypes.content_dx.servicecomponent.IServiceComponent</property>
 <property name="behaviors">
  <element value="plone.dublincore"/>
  <element value="plone.namefromtitle"/>
  <element value="plone.versioning" />
  <element value="plone.excludefromnavigation" />
  <element value="plone.richtext" />
  <element value="plone.relateditems" />
  <element value="plone.locking" />
  <element value="DPMT.common" />
 </property>
 <property name="model_source"></property>
 <property name="model_file"></property>
 <property name="schema_policy">dexterity</property>
 <alias from="(Default)" to="(dynamic view)"/>
 <alias from="edit" to="@@edit"/>
 <alias from="sharing" to="@@sharing"/>
 <alias from="view" to="(selected layout)"/>
 <action title="View" action_id="view" category="object" condition_expr=""
    description="" icon_expr="" link_target="" url_expr="string:${object_url}"
    visible="True">
  <permission value="View"/>
 </action>
 <action title="Edit" action_id="edit" category="object" condition_expr=""
    description="" icon_expr="" link_target=""
    url_expr="string:${object_url}/edit" visible="True">
  <permission value="Modify portal content"/>
 </action>
</object>
